<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new__daily_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lohan.something.New_DailyData">

    <Button
        android:text="Tasks Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dailyDate"
        android:layout_marginTop="38dp"
        android:id="@+id/tasksDone"
        android:layout_alignLeft="@+id/dailyDate"
        android:layout_alignStart="@+id/dailyDate"
        android:elevation="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:id="@+id/dailyDate"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:elevation="12dp"
        android:onClick="showDatePickerDialog"
        />

    <Button
        android:text="Fulfilled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fulfilledButton"
        android:elevation="12dp"
        android:layout_below="@+id/tasksDone"
        android:layout_marginTop="24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/tasksDone"
        android:layout_alignStart="@+id/tasksDone"
        android:onClick="onFulfilledClicked"/>

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save"
        android:elevation="12dp"
        android:onClick="onSave"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/note"
        android:layout_alignStart="@+id/note" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/note"
        android:hint="Note"
        android:layout_marginBottom="41dp"
        android:layout_above="@+id/save"
        android:layout_alignLeft="@+id/fulfilledButton"
        android:layout_alignStart="@+id/fulfilledButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
